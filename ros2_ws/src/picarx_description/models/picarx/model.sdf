<sdf version="1.8">
  <model name="picarx">
    <!-- Base origin ~ at wheel center height to avoid bouncing -->
    <pose>0 0 0.03 0 0 0</pose>
    <static>false</static>

    <!-- BASE -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <!-- approx box 0.18 x 0.09 x 0.02 -->
          <ixx>0.00071</ixx>
          <iyy>0.00273</iyy>
          <izz>0.00338</izz>
        </inertia>
      </inertial>
      <collision name="base_col">
        <geometry><box><size>0.18 0.09 0.02</size></box></geometry>
        <surface><friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction></surface>
      </collision>
      <visual name="base_vis">
        <geometry><box><size>0.18 0.09 0.02</size></box></geometry>
        <material><ambient>0.5 0.5 0.5 1</ambient></material>
      </visual>
    </link>

    <!-- REAR LEFT WHEEL (driven) -->
    <link name="left_wheel">
      <pose>-0.03 0.06 0.03 1.5708 0 0</pose> <!-- roll 90deg so cylinder axis is Y -->
      <inertial><mass>0.05</mass><inertia>
        <ixx>0.00005</ixx><iyy>0.00002</iyy><izz>0.00005</izz>
      </inertia></inertial>
      <collision name="col">
        <geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry>
        <surface><friction><ode><mu>1.5</mu><mu2>1.5</mu2></ode></friction></surface>
      </collision>
      <visual name="vis">
        <geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient></material>
      </visual>
    </link>

    <!-- REAR RIGHT WHEEL (driven) -->
    <link name="right_wheel">
      <pose>-0.03 -0.06 0.03 1.5708 0 0</pose>
      <inertial><mass>0.05</mass><inertia>
        <ixx>0.00005</ixx><iyy>0.00002</iyy><izz>0.00005</izz>
      </inertia></inertial>
      <collision name="col">
        <geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry>
        <surface><friction><ode><mu>1.5</mu><mu2>1.5</mu2></ode></friction></surface>
      </collision>
      <visual name="vis">
        <geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient></material>
      </visual>
    </link>

    <!-- FRONT WHEELS (visual only so they don't fight physics) -->
    <link name="front_left_wheel">
      <pose>0.09 0.06 0.03 1.5708 0 0</pose>
      <visual name="vis">
        <geometry><cylinder><radius>0.028</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient></material>
      </visual>
    </link>
    <joint name="front_left_fixed" type="fixed">
      <parent>base_link</parent><child>front_left_wheel</child>
    </joint>

    <link name="front_right_wheel">
      <pose>0.09 -0.06 0.03 1.5708 0 0</pose>
      <visual name="vis">
        <geometry><cylinder><radius>0.028</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient></material>
      </visual>
    </link>
    <joint name="front_right_fixed" type="fixed">
      <parent>base_link</parent><child>front_right_wheel</child>
    </joint>

    <!-- DRIVEN JOINTS -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent><child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <dynamics><damping>0.2</damping></dynamics>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent><child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <dynamics><damping>0.2</damping></dynamics>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
      </axis>
    </joint>

    <!-- SIMPLE FORWARD FACING RAY ("ultrasonic") -->
    <link name="sonar_link">
      <pose>0.10 0 0.05 0 0 0</pose>
      <sensor name="front_scan" type="lidar">
        <always_on>true</always_on>
        <update_rate>15</update_rate>
        <visualize>true</visualize>
        <lidar>
          <scan><horizontal><samples>61</samples><resolution>1</resolution><min_angle>-0.45</min_angle><max_angle>0.45</max_angle></horizontal></scan>
          <range><min>0.03</min><max>2.5</max><resolution>0.01</resolution></range>
        </lidar>
        <topic>/picarx/scan</topic>
      </sensor>
    </link>
    <joint name="sonar_fixed" type="fixed"><parent>base_link</parent><child>sonar_link</child></joint>

    <!-- FRONT CAMERA -->
    <link name="camera_link">
      <pose>0.08 0 0.08 0 0 0</pose>
      <sensor name="front_camera" type="camera">
        <always_on>true</always_on>
        <update_rate>15</update_rate>
        <visualize>false</visualize>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image><width>160</width><height>120</height><format>R8G8B8</format></image>
          <clip><near>0.02</near><far>10</far></clip>
        </camera>
        <topic>/picarx/image_raw</topic>
      </sensor>
    </link>
    <joint name="camera_fixed" type="fixed"><parent>base_link</parent><child>camera_link</child></joint>

    <!-- DIFF-DRIVE: subscribes to /picarx/cmd_vel, publishes /picarx/odometry -->
    <plugin name="gz::sim::systems::DiffDrive" filename="gz-sim-diff-drive-system">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.12</wheel_separation>
      <wheel_radius>0.03</wheel_radius>
      <topic>/picarx/cmd_vel</topic>
      <odom_topic>/picarx/odometry</odom_topic>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <max_linear_speed>1.0</max_linear_speed>  <!-- PHASE 1: Increased from 0.5 for consistency with MOCK mode -->
      <max_angular_speed>2.0</max_angular_speed>
    </plugin>
  </model>
</sdf>
